# Shared environment for Docker Compose & scripts

# Network / router
ROUTER_DOMAIN=switchyard.localhost
ROUTER_CONSOLE_SUBDOMAIN=console
CONSOLE_TARGET_ORIGIN=http://frontend:80
CADDY_ADMIN_URL=http://caddy:2019
ROUTER_TARGET_HOST=http://host.docker.internal
DOCKER_NETWORK=switchyard-net

# Backend runtime
DATABASE_URL=file:./dev.db
JWT_SECRET=dev-secret-change-me
PORT_RANGE_START=4100
PORT_RANGE_END=4700

# Frontend overrides (optional; fallback to window location)
FRONTEND_API_BASE=
FRONTEND_WS_BASE=

# Container images (production compose)
BACKEND_IMAGE=cuaupro/switchyard-backend:latest
FRONTEND_IMAGE=cuaupro/switchyard-frontend:latest
