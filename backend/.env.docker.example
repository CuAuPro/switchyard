# Backend env preset for running inside Docker Compose

# App + auth
DATABASE_URL=file:./dev.db
JWT_SECRET=dev-secret-change-me
JWT_EXPIRES_IN=1h

# Router/Caddy (compose network)
ROUTER_DOMAIN=switchyard.localhost
ROUTER_CONSOLE_SUBDOMAIN=console
CONSOLE_TARGET_ORIGIN=http://frontend:80
CADDY_ADMIN_URL=http://caddy:2019
ROUTER_TARGET_HOST=http://host.docker.internal

# Docker orchestration
DOCKER_AUTOSTART=true
DOCKER_NETWORK=switchyard-net

# Health checks
HEALTH_CHECK_INTERVAL_MS=30000
HEALTH_USE_CONTAINER_TARGETS=true

# Host port allocation for slot-a/slot-b
PORT_RANGE_START=4100
PORT_RANGE_END=4700

# Optional Prisma shadow DB for migrate dev
# SHADOW_DATABASE_URL=file:./shadow.db
